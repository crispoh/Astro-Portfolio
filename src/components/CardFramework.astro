---
//Props nombreframework y nombre del archivo de astro
export interface Props {
	name: string;
	body: string;
}

const { name, body } = Astro.props;
---

<div class="flex flex-col justify-center items-center p-[3vw] hover:animate-floatingFast">
    <div class="h-[50px] w-[50px] md:h-[100px] md:w-[100px] ">
        <slot/>
    </div>
    <h1 class=" pt-2">{name}</h1>
</div>
